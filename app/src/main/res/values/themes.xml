<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NormalStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryDarkColor1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor1</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="EditText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:height">@dimen/editTextHeight</item>
        <item name="android:width">@dimen/editTextWidth</item>
        <item name = "android:padding">@dimen/padding</item>

    </style>


    <style name="TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">32dp</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>
    <style name="TextView2">
        <item name="android:textColor">@color/secondaryDarkColor</item>
        <item name="android:textSize">24dp</item>
        <item name="android:background">@color/primaryTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">cursive</item>

    </style>
    <style name="button">
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
        <item name="android:layout_marginTop">@dimen/topMargin</item>
        <item name="android:layout_marginBottom">@dimen/bottomMargin</item>
        <item name="android:gravity">center</item>

    </style>
</resources>